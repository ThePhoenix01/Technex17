<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_height="255dp"
    android:id="@+id/cv_events"
    custom:cardCornerRadius="2dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:layout_width="match_parent">

    <FrameLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="top"
                android:layout_gravity="top"
                android:background="@color/transparent_white_percent_50">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginEnd="30dp"
                    android:paddingTop="5dp"
                    android:layout_marginStart="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_gravity="left"
                        android:id="@+id/iv_events_icon"
                        android:layout_marginEnd="10dp"
                        android:scaleType="centerCrop"/>


                    <org.piratejester.technex17.utils.BoldModTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_marginBottom="2dp"
                        android:id="@+id/tv_events"
                        android:textColor="@color/grey_bg"
                        android:text="Robonex"
                       />


                </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="5dp"
                  android:orientation="horizontal">

                       <org.piratejester.technex17.utils.ModTextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="left"
                           android:layout_marginStart="15dp"
                           android:gravity="left"
                           android:textSize="16dp"
                           android:textColor="@color/grey_bg"
                           android:text="Xestos"
                           android:layout_marginBottom="2dp"/>

                       <org.piratejester.technex17.utils.ModTextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="left"
                           android:layout_marginStart="15dp"
                           android:gravity="left"
                           android:textSize="16dp"
                           android:textColor="@color/grey_bg"
                           android:text="Scientists of Utopia"
                           android:layout_marginBottom="2dp"/>

                  <org.piratejester.technex17.utils.ModTextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="left"
                      android:layout_marginStart="15dp"
                      android:gravity="left"
                      android:textSize="16dp"
                      android:textColor="@color/grey_bg"
                      android:text="Pixelate"
                      android:layout_marginBottom="2dp"/>


                </LinearLayout>

                   </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:id="@+id/iv_events"
                android:layout_gravity="bottom"
                android:scaleType="fitXY"
                />



        </LinearLayout>



</FrameLayout>

</android.support.v7.widget.CardView>