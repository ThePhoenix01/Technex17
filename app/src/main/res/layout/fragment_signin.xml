<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <FrameLayout
            android:layout_height="110dp"
            android:layout_width="110dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal">


            <org.piratejester.technex17.utils.RoundedImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:src="@drawable/exhibition"
                android:scaleType="center"
                android:id="@+id/imageviewreg"/>
            <org.piratejester.technex17.utils.RoundedImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|right"
                android:src="@drawable/matcamera"
                android:scaleType="centerCrop"
                android:id="@+id/imageviewregbut"/>

        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:orientation="vertical"
            android:layout_marginTop="0dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@color/transparent_white_percent_25">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitCenter"
                    android:padding="5dp"
                    android:src="@drawable/account_outline"
                    android:background="@color/transparent_black_percent_45"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="First Name"
                    android:textSize="14dp"
                    android:textColorHint="@color/transparent_white_percent_90"
                    android:textColor="@color/transparent_white_hex_15"
                    android:layout_weight="0.5"
                    android:paddingLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical"
                    android:background="@color/transparent_black_percent_30"/>


                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitCenter"
                    android:padding="5dp"
                    android:src="@drawable/account_outline"
                    android:background="@color/transparent_black_percent_45"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:hint="Last Name"
                    android:paddingLeft="5dp"
                    android:layout_weight="0.5"
                    android:textColorHint="@color/transparent_white_percent_90"
                    android:textColor="@color/transparent_white_hex_15"
                    android:gravity="center_vertical"
                    android:background="@color/transparent_black_percent_30"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitCenter"
                    android:padding="5dp"
                    android:src="@drawable/email_open"
                    android:background="@color/transparent_black_percent_45"
                    />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Email / UserName"
                    android:textSize="14dp"
                    android:paddingLeft="5dp"
                    android:textColorHint="@color/transparent_white_percent_90"
                    android:textColor="@color/transparent_white_hex_15"
                    android:gravity="center_vertical"
                    android:background="@color/transparent_black_percent_30"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitCenter"
                    android:padding="5dp"
                    android:src="@drawable/lock_out"
                    android:background="@color/transparent_black_percent_45"


                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Password"
                    android:paddingLeft="5dp"
                    android:inputType="textPassword"
                    android:layout_weight="0.5"
                    android:textSize="14dp"
                    android:layout_marginRight="5dp"
                    android:textColorHint="@color/transparent_white_percent_90"
                    android:textColor="@color/transparent_white_hex_15"
                    android:gravity="center_vertical"
                    android:background="@color/transparent_black_percent_30"/>


                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitCenter"
                    android:padding="5dp"
                    android:src="@drawable/lock_out"
                    android:background="@color/transparent_black_percent_45"


                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Confirm"
                    android:paddingLeft="5dp"
                    android:inputType="textPassword"
                    android:textSize="14dp"
                    android:gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:textColor="@color/transparent_white_hex_15"
                    android:textColorHint="@color/transparent_white_percent_90"
                    android:background="@color/transparent_black_percent_30"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitCenter"
                    android:padding="5dp"
                    android:src="@drawable/cellphone"
                    android:background="@color/transparent_black_percent_45"
                    />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Mobile"
                    android:textSize="14dp"
                    android:paddingLeft="5dp"
                    android:gravity="center_vertical"
                    android:textColorHint="@color/transparent_white_percent_90"
                    android:textColor="@color/transparent_white_hex_15"
                    android:background="@color/transparent_black_percent_30"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitCenter"
                    android:padding="5dp"
                    android:src="@drawable/home_white"
                    android:background="@color/transparent_black_percent_45"
                    />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="College"
                    android:textSize="14dp"
                    android:paddingLeft="5dp"
                    android:gravity="center_vertical"
                    android:textColorHint="@color/transparent_white_percent_90"
                    android:textColor="@color/transparent_white_hex_15"
                    android:background="@color/transparent_black_percent_30"/>

            </LinearLayout>


        </LinearLayout>


        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="#83dd2600"
            android:text="REGISTER"
            android:id="@+id/reg_but"
            android:textSize="18dp"
            android:textColor="@color/transparent_white_hex_15"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="right" />

        <org.piratejester.technex17.utils.ModTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Already Registered?"
            android:textSize="14dp"
            android:textColor="@color/white"/>



        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="LOG IN NOW"
            android:id="@+id/log_but"
            android:textColorHighlight="@color/grey"
            android:textSize="14dp"
            android:textColor="@color/transparent_white_percent_55"
            android:background="@color/md_pink_trans"
            />



    </LinearLayout>

    </ScrollView>

</LinearLayout>