<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:id="@+id/cv_events"
    custom:cardCornerRadius="2dp"
    custom:cardBackgroundColor="@color/transparent_full"
    custom:cardElevation="0dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:layout_width="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:id="@+id/layout_detail_frag"
            android:orientation="vertical"
            android:padding="15dp"
            android:background="@color/transparent_white_percent_90"
            android:layout_height="wrap_content">

            <org.piratejester.technex17.utils.BoldModTextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="@color/md_grey_900"
                android:id="@+id/title"
                android:textSize="20sp"
                android:text="Details"/>

            <View
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="0dp"
                android:background="@color/white"/>

            <org.piratejester.technex17.utils.ModTextView
                android:layout_width="match_parent"
                android:id="@+id/body"
                android:layout_height="wrap_content"
                android:textColor="@color/md_grey_700"
                android:textSize="16sp"
                android:text="@string/large_text"/>

        </LinearLayout>


</android.support.v7.widget.CardView>