<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:background="@color/transparent_white_percent_50"
    android:elevation="2dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:padding="4dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_width="40dp"
                android:layout_margin="5dp"
                card_view:cardElevation="0dp"
                android:background="@color/alizarin"
                card_view:cardBackgroundColor="@color/alizarin"
                android:layout_height="40dp"
                card_view:cardCornerRadius="4dp"/>

            <org.piratejester.technex17.utils.ModTextView
                android:layout_width="40dp"
                android:layout_margin="5dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="S"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <org.piratejester.technex17.utils.BoldModTextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_grey_900"
                    android:text = "Stellar Stuff"/>
                <org.piratejester.technex17.utils.ModTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_grey_500"
                    android:text = "May 10"/>


            </LinearLayout>



            <org.piratejester.technex17.utils.ModTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:ellipsize="end"
                android:textColor="@color/md_grey_700"
                android:text = "@string/long_post"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/tag1"
                        android:layout_margin="2dp"
                        android:layout_width="wrap_content"
                        card_view:cardElevation="0dp"
                        card_view:cardBackgroundColor="@color/md_green_500"
                        android:layout_height="wrap_content"
                        card_view:cardCornerRadius="4dp">

                    <org.piratejester.technex17.utils.ModTextView
                        android:layout_width="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:text="Innovate"/>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/tag2"
                    android:layout_margin="2dp" android:layout_width="wrap_content"
                    card_view:cardElevation="0dp"
                    card_view:cardBackgroundColor="@color/md_pink_500"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="4dp">

                    <org.piratejester.technex17.utils.ModTextView
                        android:layout_width="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:text="Nurture"/>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/tag3"
                    android:layout_margin="2dp" android:layout_width="wrap_content"
                    card_view:cardElevation="0dp"
                    card_view:cardBackgroundColor="@color/md_blue_500"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="4dp">

                    <org.piratejester.technex17.utils.ModTextView
                        android:layout_width="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:text="Evolve"/>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>




    </LinearLayout>

</LinearLayout>