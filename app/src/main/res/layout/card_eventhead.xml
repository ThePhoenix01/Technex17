<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    custom:cardElevation="3dp"
    android:id="@+id/cv_events"
    android:layout_marginBottom="4dp"
    android:layout_width="match_parent">

    <FrameLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="top"
                android:layout_gravity="top"
                android:background="@color/transparent_white_percent_50">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@drawable/bell_white"
                        android:layout_gravity="left"
                        android:id="@+id/iv_events_icon"
                        android:scaleType="centerCrop"/>


                    <org.piratejester.technex17.utils.BoldModTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:id="@+id/tv_events"
                        android:textColor="@color/md_grey_900"
                        android:text="Robonex"
                       />
                </LinearLayout>


            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="160dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/iv_events"
                android:layout_gravity="bottom"
                android:scaleType="fitXY"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent_black_percent_35"
                android:layout_gravity="bottom|right"
                android:gravity="right"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="5dp"
                        android:padding="2dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/rupee"/>



                    <org.piratejester.technex17.utils.ModTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="5dp"
                        android:layout_marginStart="15dp"
                        android:id = "@+id/prize_text"
                        android:gravity="left"
                        android:layout_marginRight="5dp"
                        android:textSize="14dp"
                        android:layout_marginBottom="2dp"
                        android:textColor="@color/white"
                        android:text="Prize : Rs 20000" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="5dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/account_outline"/>



                    <org.piratejester.technex17.utils.ModTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="5dp"
                        android:layout_marginStart="15dp"
                        android:id = "@+id/team_text"
                        android:gravity="left"
                        android:layout_marginRight="5dp"
                        android:textSize="14dp"
                        android:layout_marginBottom="2dp"
                        android:textColor="@color/white"
                        android:text="Maximum Members : 4" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="5dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/stopwatch_white"/>

                    <org.piratejester.technex17.utils.ModTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="5dp"
                        android:layout_marginStart="15dp"
                        android:id = "@+id/time_text"
                        android:gravity="left"
                        android:layout_marginRight="5dp"
                        android:textSize="14dp"
                        android:layout_marginBottom="2dp"
                        android:textColor="@color/white"
                        android:text="Deadline : 20th Jan" />

                </LinearLayout>

        </LinearLayout>
            </FrameLayout>


            <org.piratejester.technex17.utils.ModTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="14sp"
                android:layout_marginBottom="2dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:id="@+id/tv_desc"
                android:textColor="@color/md_grey_700"
                android:text="Dashing through the snow, in a one horse open sleigh, over the fields we go, laughing all the way!! Jingle Bells, Jingle Bells!!"
                />



        </LinearLayout>



</FrameLayout>

</android.support.v7.widget.CardView>